<!-- Desktop Header -->
<header class="w-full items-center bg-white py-2 px-6 hidden sm:flex">
    <div class="w-1/2"></div>
    <div x-data="{ isOpen: false }" class="relative w-1/2 flex justify-end">
        <button @click="isOpen = !isOpen" class="relative z-10 w-12 h-12 rounded-full overflow-hidden border-4 border-gray-400 hover:border-gray-300 focus:border-gray-300 focus:outline-none">
            <%= image_tag "https://source.unsplash.com/uJ8LNVCBjFQ/400x400", alt: "User avatar" %>
        </button>
        <button x-show="isOpen" @click="isOpen = false" class="h-full w-full fixed inset-0 cursor-default"></button>
        <div x-show="isOpen" class="absolute w-32 bg-white rounded-lg shadow-lg py-2 mt-16">
            <%= link_to "Account", "#", class: "block px-4 py-2 account-link hover:text-white" %>
            <%= link_to "Support", "#", class: "block px-4 py-2 account-link hover:text-white" %>
            <%= link_to "Sign Out", "#", class: "block px-4 py-2 account-link hover:text-white" %>
        </div>
    </div>
</header>

<!-- Mobile Header & Nav -->
<header x-data="{ isOpen: false }" class="w-full bg-sidebar py-5 px-6 sm:hidden">
    <div class="flex items-center justify-between">
        <%= link_to "Admin", root_path, class: "text-white text-3xl font-semibold uppercase hover:text-gray-300" %>
        <button @click="isOpen = !isOpen" class="text-white text-3xl focus:outline-none">
            <i x-show="!isOpen" class="fas fa-bars"></i>
            <i x-show="isOpen" class="fas fa-times"></i>
        </button>
    </div>

    <!-- Dropdown Nav -->
    <nav :class="isOpen ? 'flex': 'hidden'" class="flex flex-col pt-4">
        <%= link_to root_path, class: "flex items-center text-white opacity-75 hover:opacity-100 py-2 pl-4 nav-item" do %>
            <i class="fas fa-tachometer-alt mr-3"></i> Dashboard
        <% end %>
        <%= link_to blank_path, class: "flex items-center active-nav-link text-white py-2 pl-4 nav-item" do %>
            <i class="fas fa-sticky-note mr-3"></i> Blank Page
        <% end %>
        <%= link_to tables_path, class: "flex items-center text-white opacity-75 hover:opacity-100 py-2 pl-4 nav-item" do %>
            <i class="fas fa-table mr-3"></i> Tables
        <% end %>
        <%= link_to forms_path, class: "flex items-center text-white opacity-75 hover:opacity-100 py-2 pl-4 nav-item" do %>
            <i class="fas fa-align-left mr-3"></i> Forms
        <% end %>
        <%= link_to tabs_path, class: "flex items-center text-white opacity-75 hover:opacity-100 py-2 pl-4 nav-item" do %>
            <i class="fas fa-tablet-alt mr-3"></i> Tabbed Content
        <% end %>
        <%= link_to calendar_path, class: "flex items-center text-white opacity-75 hover:opacity-100 py-2 pl-4 nav-item" do %>
            <i class="fas fa-calendar mr-3"></i> Calendar
        <% end %>
        <%= link_to "#", class: "flex items-center text-white opacity-75 hover:opacity-100 py-2 pl-4 nav-item" do %>
            <i class="fas fa-cogs mr-3"></i> Support
        <% end %>
        <%= link_to "#", class: "flex items-center text-white opacity-75 hover:opacity-100 py-2 pl-4 nav-item" do %>
            <i class="fas fa-user mr-3"></i> My Account
        <% end %>
        <%= link_to "#", class: "flex items-center text-white opacity-75 hover:opacity-100 py-2 pl-4 nav-item" do %>
            <i class="fas fa-sign-out-alt mr-3"></i> Sign Out
        <% end %>
        <%= button_tag class: "w-full bg-white cta-btn font-semibold py-2 mt-3 rounded-lg shadow-lg hover:shadow-xl hover:bg-gray-300 flex items-center justify-center" do %>
            <i class="fas fa-arrow-circle-up mr-3"></i> Upgrade to Pro!
        <% end %>
    </nav>
</header>

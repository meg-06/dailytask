<aside class="relative bg-sidebar h-screen w-64 hidden sm:block shadow-xl">
  <div class="p-6">
    <%= link_to "Admin", root_path, class: "text-white text-3xl font-semibold uppercase hover:text-gray-300" %>
  </div>
  <nav class="text-white text-base font-semibold pt-3">
    <%= link_to root_path, class: "flex items-center #{'active-nav-link' if current_page?(root_path)} text-white py-4 pl-6 nav-item" do %>
      <i class="fas fa-tachometer-alt mr-3"></i> 今日のシフト
    <% end %>
    <%= link_to blank_path, class: "flex items-center #{'active-nav-link' if current_page?(blank_path)} text-white opacity-75 hover:opacity-100 py-4 pl-6 nav-item" do %>
      <i class="fas fa-sticky-note mr-3"></i> シフト管理
    <% end %>
    <%= link_to tables_path, class: "flex items-center #{'active-nav-link' if current_page?(tables_path)} text-white opacity-75 hover:opacity-100 py-4 pl-6 nav-item" do %>
      <i class="fas fa-table mr-3"></i> 従業員管理
    <% end %>
    <%= link_to forms_path, class: "flex items-center #{'active-nav-link' if current_page?(forms_path)} text-white opacity-75 hover:opacity-100 py-4 pl-6 nav-item" do %>
      <i class="fas fa-align-left mr-3"></i> タグ管理
    <% end %>
    <%= link_to tabs_path, class: "flex items-center #{'active-nav-link' if current_page?(tabs_path)} text-white opacity-75 hover:opacity-100 py-4 pl-6 nav-item" do %>
      <i class="fas fa-tablet-alt mr-3"></i> Tabbed Content
    <% end %>
    <%= link_to calendar_path, class: "flex items-center #{'active-nav-link' if current_page?(calendar_path)} text-white opacity-75 hover:opacity-100 py-4 pl-6 nav-item" do %>
      <i class="fas fa-calendar mr-3"></i> Calendar
    <% end %>
  </nav>
</aside>
